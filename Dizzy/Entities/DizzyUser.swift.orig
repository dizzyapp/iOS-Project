import UIKit

enum UserRole: String, Codable {
    
    init(from decoder: Decoder) throws {
        let roleText = try decoder.singleValueContainer().decode(String.self)
        switch roleText {
        case "customer":
            self = .customer
        case "admin":
            self = .admin
        default:
            self = .guest
        }
    }
    
    case customer
    case guest
    case admin
}

